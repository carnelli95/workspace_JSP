<table>
	<%	
		int num = 2;
		String dan = request.getParameter("dan");
		if(dan != null) { 
			num = Integer.parseInt(dan);
			if(num < 2 || num > 9){ 
				String msg = "2단에서 9단까지만 출력가능합니다."; 
				return; 
			}	
		}
		
		out.println(num + "단입니다.");
			for(int j = 1; j <= 9; j++) {
				out.print(num + " x " + j  + " = " + num * j + "<br>");
			}
			out.print("<br>");
	%>
</table>	

<form>
	단 입력 	: <input type="text" name ="dan" value="<%= num %>"><br/>
	구구단 출력 <input type="submit" value="구구단 출력">
	<input type="text" value="msg" readonly>
</form>
